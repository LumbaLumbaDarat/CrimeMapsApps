<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/padding_default">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_bottom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_text_input_layout"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_bottom_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_text_input_layout_inner"
            android:hint="@string/title"
            android:inputType="textPersonName"
            android:singleLine="true"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_half_half_default"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_negative_bottom_input"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_half_half_default"
            android:text="@string/title"
            app:cornerRadius="@dimen/round_default" />

        <Button
            android:id="@+id/btn_positive_bottom_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_half_half_default"
            android:text="@string/title"
            app:cornerRadius="@dimen/round_default" />
    </LinearLayout>
</LinearLayout>