<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.component.activity.MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_half_default"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_add_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_half_default"
            android:background="@drawable/button_primary_ripple_white"
            app:srcCompat="@drawable/ic_round_add_24" />

        <ImageView
            android:id="@+id/iv_search_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_half_half_default"
            android:padding="@dimen/padding_half_default"
            android:background="@drawable/button_primary_ripple_white"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_round_search_24" />
    </LinearLayout>
</FrameLayout>