<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_admin_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/title"
        app:layout_constraintBottom_toBottomOf="@+id/iv_btn_edit_admin_name"
        app:layout_constraintEnd_toStartOf="@+id/iv_btn_edit_admin_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_btn_edit_admin_name" />

    <ImageView
        android:id="@+id/iv_btn_edit_admin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_secondary_ripple_primary"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_round_edit_24"
        app:tint="@color/primary" />

    <TextView
        android:id="@+id/tv_email_admin_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:gravity="start|center"
        android:text="@string/title"
        app:drawableStartCompat="@drawable/ic_round_email_24"
        app:drawableTint="@color/color_gray"
        app:layout_constraintEnd_toEndOf="@+id/iv_btn_edit_admin_name"
        app:layout_constraintStart_toStartOf="@+id/tv_admin_name"
        app:layout_constraintTop_toBottomOf="@+id/iv_btn_edit_admin_name" />

    <Button
        android:id="@+id/btn_change_password"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/label_change_password"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_btn_edit_admin_name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_admin_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_admin_name"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>