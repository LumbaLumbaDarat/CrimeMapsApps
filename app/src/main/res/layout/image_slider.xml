<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_width_rectangular_default"/>

    <LinearLayout
        android:id="@+id/ll_dot_slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_half_half_default"
        android:layout_marginBottom="@dimen/margin_half_half_default"
        android:layout_gravity="bottom"
        android:padding="@dimen/padding_half_half_default"
        android:orientation="horizontal"/>
</FrameLayout>