<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_action_right_parent_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_half_default"
        android:padding="@dimen/padding_half_default"
        android:background="@drawable/button_secondary_ripple_primary"
        app:srcCompat="@drawable/ic_round_dashboard_24"
        app:tint="@color/primary" />

    <LinearLayout
        android:id="@+id/ll_background_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/padding_half_default"
        android:background="@drawable/frame_background_secondary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_parent_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_half_half_default"
            android:text="@string/title" />

        <TextView
            android:id="@+id/tv_parent_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:fontFamily="@font/open_sans_bold"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_action_left_parent_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_half_default"
        android:padding="@dimen/padding_half_default"
        android:background="@drawable/button_secondary_ripple_primary"
        app:srcCompat="@drawable/ic_round_dashboard_24"
        app:tint="@color/primary" />

</LinearLayout>